- page_context[:select_footer_nav] = :widgets
- content_for(:html_title) { t('.page_title', name: @organization.name) }

.project_content_title.margin_bottom_10
  %h2= t('.title')
  %p= t('.embed')

.clearfix
  - @widgets.each do |widget|
    - view_path = "#{controller_name}/#{widget.name.underscore}"
    = render partial: 'widget', locals: { widget: widget, type: 'organization', view_path: view_path }
