%h1 Last Activities
%p
.row
  - 3.times do |i|
    .col-md-4
      .info-box{ class: last_activity_bg[i] }
        %span.info-box-icon
          %i.fa{ class: last_activity_icons[i] }
        .info-box-content
          %span.info-box-text= last_activity_text[i]
          %span.info-box-number= last_activity_info[i]
          .progress
            .progress-bar{ style: 'width: 100%' }
          %span.progress-description
