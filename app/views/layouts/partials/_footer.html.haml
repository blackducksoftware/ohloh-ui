.footer-left
  %a.logo_link{ href: 'https://www.synopsys.com' }
    %img.logo_img{ itemprop: 'image', src: image_path('logo/synopsys_logo.png'), alt: 'Open Hub' }

.footer-mid
  = "ABOUT SYNOPSYS"
  %p
  %p
    %a{ href: 'https://www.synopsys.com/software-integrity/security-testing.html' }= 'Application Security Testing'
  %p
    %a{ href: 'https://www.synopsys.com/software-integrity/software-security-services.html' }= 'Software Security Services'
