.footer-right
  = "ABOUT OPEN HUB"
  %p
  %p
    %a{ href: 'https://community.synopsys.com/s/black-duck-open-hub' }= t :forum
  %p
    %a{ href: 'http://blog.openhub.net/terms' }= t :terms
  %p
