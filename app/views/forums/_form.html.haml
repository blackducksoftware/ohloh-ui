%fieldset
  %div{class: 'control-group'}
    = f.label :title, "Title (required)", class: 'control-label required'
    %div{class: 'controls'}
      = f.text_field :name, class: 'span8'
    - if @forum.errors[:name]
      %p{class: 'error'}#{@forum.errors[:name]}

  %div{class: 'control-group'}
    = f.label :position, "Position", class: 'control-label'
    %div{class: 'controls'}
      = text_field :position, size: 5

  %div{class: 'control-group'}
    = f.label :description, "Description", class: 'control-label'
    %div{class: 'controls'}
      = text_area :description, rows: 10, class: 'span10'
