.col-md-3.top_ten
  - if device?
    %h2.most_popular_projects
      %button.collapsed#no-background{"aria-controls" => "collapseOne", "aria-expanded" => "false", "data-target" => "#collapseOne", "data-toggle" => "collapse"}
        %span.toggle-icon.glyphicon.glyphicon-chevron-down.pull-right#collpase1
        =t('.popular_projects')
    .collapse#collapseOne
      = render partial: 'content', locals: { popular_items: @home.most_popular_projects,
        commit: 'user', colors: 'popular', required: 'most_popular_projects',
        max: @home.most_popular_projects.map(&:user_count).max }
  - else
    %h2.most_popular_projects= t('.popular_projects')
    = render partial: 'content', locals: { popular_items: @home.most_popular_projects,
    commit: 'user', colors: 'popular', required: 'most_popular_projects',
    max: @home.most_popular_projects.map(&:user_count).max }
