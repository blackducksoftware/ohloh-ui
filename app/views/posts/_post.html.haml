.well.posts{ style: post.account.access.admin? ? 'background: #D5E3E9;' : 'background: #F6F6F6' }
  = find_and_preserve(markdown_format(post.body))
  .clearfix.margin_top_10
    .col-md-3.pull-right
      .pull-left
        %a= avatar_img_for post.account, 42
      .pull-left.margin_left_5
        %a.avatar_name{ href: account_path(post.account) }
          = truncate(h(post.account.name), length: 18)
        %small.date.avatar_name
          = t('.replied_ago', date: time_ago_in_words(post.updated_at))
    .clear
.row
  &nbsp;
